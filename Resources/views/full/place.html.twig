{% extends "eZDemoBundle::pagelayout.html.twig" %}
{% block content %}
<div>
    <div class="row">
        <div class="col-md-6 place-name">
            <h1>{{ ez_render_field( content, 'name' ) }}</h1>
        </div>
    </div>
    <div class="row">
        {% if ( relatedImage is empty ) and (ez_is_field_empty( content, 'image' )) %}
            <div class="col-md-10">
        {% else %}
            <div class="col-md-6">
                {% if not ez_is_field_empty( content, 'image' ) %}

                    {# display assigned place image #}
                    {{ ez_render_field( content, 'image', { 'attr': { 'class': 'place-image' }, 'parameters': {'alias' : 'imageplacesize'} } ) }}
                {% else %}

                    {# display related place image #}
                    {{ ez_render_field( relatedImage, 'image', { 'attr': { 'class': 'place-image' }, 'parameters': {'alias' : 'imageplacesize'} } ) }}
                {% endif %}
            </div>
            <div class="col-md-4">
        {% endif %}

                {{ ez_render_field(
                    content, 'location', { 'attr': { 'class': 'place-location' }, 'parameters':{ 'showInfo':false, 'width': '100%', 'zoom' : 16 } }
                    )
                }}
            </div>
    </div>
    <div class="row">
        <div class="col-md-10">
            {{ ez_render_field( content, 'description', { 'attr': { 'class': 'place-description' }, } ) }}
        </div>
    </div>
</div>
{% endblock %}
